from pathlib import Path
import json

dataset_name = '{{data.dataset_name}}'

def get_dataset_folder():
    return Path(__file__).parents[2]

def get_data_folders():
    with open(get_dataset_folder() / '.dataset' / 'config.json', 'r') as f:
        dataset_config = json.load(f)

    return {data_folder.replace('/', '_'): get_dataset_folder() / data_folder for data_folder in dataset_config['data_folders']}

